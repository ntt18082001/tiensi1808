@page
@model WebApp.Pages.Students.GetModel
@using WebApp.Database
@{
	Layout = "/Pages/Shared/_Layout.cshtml";
}
@{ 
	var data = ViewData["data"] as Student;
}
<div class="row mt-5">
	<div class="col-3">
		<img src="~/img/@data.Avatar" alt="Hình ảnh" style="width: 100%; height: 100%;" />
	</div>
	<div class="col-9">
		<table class="table">
			<tr>
				<td><strong>MSSV:</strong> @data.Code</td>
				<td><strong>Họ tên:</strong> @data.Name</td>
			</tr>
			<tr>
				<td><strong>Năm sinh:</strong> @data.YearOfBirth</td>
				@if (data.Gender == false) {
					<td><strong>Giới tính:</strong> Nam</td>
				}else { 
					<td><strong>Giới tính:</strong> Nữ</td>
				}
			</tr>
			<tr>
				<td><strong>Địa chỉ:</strong> @data.Address</td>
				<td><strong>Chi tiết:</strong> @data.Detail</td>
			</tr>
			<tr>
				<td><strong>Lớp: </strong>@data.Class.ClassName</td>
				<td>
					<div class="btn-group">
						<a class="btn btn-outline-dark" href="/Students/Update?id=@data.Id"><i class="fas fa-edit"></i></a>
						<a class="btn btn-outline-dark" onclick="return confirm('Xác nhận xóa?')" href="/Students/Delete?id=@data.Id"><i class="fas fa-trash-alt"></i></a>
					</div>
				</td>
			</tr>
		</table>
	</div>
</div>
<a href="/Students/GetAll" class="btn btn-outline-secondary mt-3"><i class="fas fa-backward"></i></a>